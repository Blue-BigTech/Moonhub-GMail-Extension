{
  "name": "Moonhub Email Generation Extension",
  "description": "This is a powerful AI email generator.",
  "version": "0.1",
  "icons": {
    "128": "images/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/"
  ],
  "manifest_version": 3
}
